<div><h1 class="display-4 p-4 fw-bold">New game</h1></div>

<div class="d-flex">
  <ul class="list-group list-group-horizontal mx-3">
    <% @letters.each do |letter| %>
    <li class="list-group-item m-2 bg-primary shadow p-3 rounded">
      <h4 class="font-weight-bold text-white"><%= letter %></h4>
    </li>
    <% end %>
  </ul>
</div>
<p class="px-4 py-2 fw-regular">What is the longest word you can find?</p>

<form class="d-inline-flex m-3 d-flex" action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :available_letters, @letters %>
  <div class="input-group mb-3">
    <input type="text" class="form-control" name="word" aria-label="Recipient's username" aria-describedby="button-addon2" placeholder="Your best shot">
    <div class="input-group-append">
      <input id="button-addon2" class="btn btn-py-1 px-4 btn-outline-primary" type="submit" value="Play">
    </div>
  </div>
</form>
